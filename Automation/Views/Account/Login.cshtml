@{
    ViewData["Title"] = "Login";

}


<div style=" display: flex; justify-content: center; align-items: center; margin:70px 0 " >
    <div class="panel panel-body col-md-4 col-xs-12 text-center"
         style="background-color:#f5f5f5; border-radius:8px; padding:20px;">

        <div class="modal-body">
            <img src="~/publicimage/mainLogo.png" style="width:75px;" />
        </div>

        <div>
            <span style="text-align:center; font-weight:bold;">ورود به سیستم اتوماسیون</span>
        </div>

        <hr style="height:1px; background-color:#032E15;width:100%" />

        <div class="alert text-center" style="background-color:#032E15;color:white;">
            <span>اتوماسیون اداری تحت وب</span>
        </div>

        <form asp-controller="Account" asp-action="Login" method="post" class="mt-3">
            <!-- user -->
            <div class="form-group mb-3">
                <i class="fa fa-solid"></i>
                <input type="text" class="form-control text-right fw-bold"
                       autocomplete="off" placeholder="نام کاربری" />
                <span class="text-danger fw-bold"></span>
            </div>

            <!-- password -->
            <div class="form-group mb-3">
                <input type="password" class="form-control text-right fw-bold"
                       autocomplete="off" placeholder="پسورد" />
                <span class="text-danger fw-bold"></span>
            </div>

            <!-- submit -->
            <div class="form-group text-center">
                <input type="submit" class="btn btn-dark w-100 " value="ورود به سامانه" />
                <div style="margin-top:4px; font-size:13px;">
                    <a style="text-decoration:none" href="#">فراموشی رمز عبور</a>
                </div>
            </div>
        </form>
        <div >
            <a style="text-decoration:none"href="https://sunflower-dev.com">sunflower-dev.com</a>
        </div>
    </div>   
</div>
